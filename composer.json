{
  "name": "treblle/utils",
  "description": "Treblle PHP SDK utilities.",
  "homepage": "https://www.treblle.com/",
  "license": "MIT",
  "keywords": [
    "api",
    "debuging",
    "documentation",
    "laravel",
    "monitoring",
    "treblle"
  ],
  "type": "library",
  "authors": [
    {
      "role": "Developer",
      "name": "Steve McDougall",
      "email": "juststevemcd@gmail.com",
      "homepage": "https://www.juststeveking.uk/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Treblle\\Utils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Treblle\\Utils\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "juststeveking/sdk-tools": "^0.0.2"
  },
  "require-dev": {
    "laravel/pint": "^1.7",
    "pestphp/pest": "^2.3",
    "phpstan/phpstan": "^1.10.8"
  },
  "scripts": {
    "pint": [
      "./vendor/bin/pint"
    ],
    "stan": [
      "./vendor/bin/phpstan analyse --memory-limit=3G"
    ],
    "test": [
      "./vendor/bin/pest"
    ]
  },
  "scripts-descriptions": {
    "pint": "Run Laravel Pint code styling.",
    "stan": "Run PHPStan against code base.",
    "test": "Run test suite."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  }
}
